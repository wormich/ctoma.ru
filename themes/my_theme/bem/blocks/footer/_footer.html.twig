<footer role="contentinfo" class="html__footer footer  width_full pace-def">
    <div class="footer__content width width_norm">
        <div class="footer__col1">
            <div class="footer__menus ">
                <div class="footer__menu width_paddingLeftRight">
                    {{ drupal_menu('footer-1') }}
                </div>
                <div class="footer__menu width_paddingLeftRight">
                    <a class="footer__linkBold" href="/services">Услуги</a>
                    {{ drupal_view('uslugi', 'footer_menu') }}
                </div>
                <div class="footer__menu width_paddingLeftRight">
                    {{ drupal_menu('footer-3') }}
                </div>
                <div class="footer__menu width_paddingLeftRight">
                    {{ drupal_menu('footer-4') }}
                </div>
                <div class="footer__menu width_paddingLeftRight">
                    {{ drupal_menu('footer-5') }}
                </div>
                <div class="footer__menu width_paddingLeftRight">
                    <a class="footer__linkBold" href="/make-an-appointment">Записаться</a>

                    <a href="/form/callback"
                       class="use-ajax footer__link"
                       data-dialog-options='{
                           "width":"450px",
                           "minHeight":"500px",
                           "dialogClass":"popupDialog"
                           }'
                       data-dialog-type="modal">Заказать звонок</a>

                    <a href="/form/zadat-vopros"
                       class="use-ajax footer__link"
                       data-dialog-options='{
                                "width":"500px",
                                "minHeight":"500px",
                                "dialogClass":"popupDialog"
                                }'
                       data-dialog-type="modal">Задать вопрос</a>

                    <a href="/form/kontrol-kacestva"
                       class="use-ajax footer__link"
                       data-dialog-options='{
                           "width":"500px",
                           "minHeight":"500px",
                           "dialogClass":"popupDialog"
                           }'
                       data-dialog-type="modal">Контроль качества</a>

                </div>
            </div>

            <div class="footer__agreement width_paddingLeftRight">
                <a href="/agreement">Политика конфиденциальности</a>
            </div>

            <div class="footer__c width_paddingLeftRight">
