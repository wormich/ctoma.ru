    <div class="breadcrumbContainer width width_full">
    <div class="width width_norm">
        <div class="block-region-breadcrumb">
            <div class="block">
                <style>
                .breadcrumb {
                    list-style: none;
                }
                .breadcrumb>li {
                    display: inline-block;
                }
                .breadcrumb>li+li:before {
                    padding: 0 5px;
                    color: #ccc;
                    content: "/\00a0";
                }
                .breadcrumb__text div {
                  display: inline-block;
                }
            </style>
            <ol class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <a class="breadcrumb__link" href="/" itemprop="item"><span  itemprop="name">Главная</span></a>
                    <meta itemprop="position" content="1" />
                </li>
                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <span itemprop="item" content="https://ctoma.ru/portfolio">
                        <span class="breadcrumb__text" itemprop="name">
                          {% if path('<current>') == '/personal/stomatologi-terapevty' %}
                          Стоматологи-терапевты
                          {% elseif path('<current>') == '/personal/parodontologi' %}
                          Пародонтологи
                          {% elseif path('<current>') == '/personal/stomatologi-ortopedy' %}
                          Стоматологи-ортопеды
                          {% elseif path('<current>') == '/personal/ortodonty' %}
                          Ортодонты
                          {% elseif path('<current>') == '/personal/stomatologi-hirurgi' %}
                          Стоматологи-хирурги
                          {% else %}
                          {% endif %}
                        </span>
                    </span>
                    <meta itemprop="position" content="2" />
                </li>
            </ol>
        </div>
    </div>
</div>
</div>

<div class="doctors__container">
  <h1 class="doctors__title title_grey width width_norm width_paddingStandart">
