{#
/**
 * @file
 * Template for a one column panel layout.
 *
 * This template provides a very simple "one column" panel display layout.
 *
 * Variables:
 * - $id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 *   panel of the layout. This layout supports the following sections:
 *   - content.middle: The only panel in the layout.
 */
#}

{{ attach_library('my_theme/brands') }}

<div class="brands">

  <div class="width width_norm">
    {{ drupal_block("breadcrumbs") }}
  </div>

  <h1 class="title brands__title width width_norm width_paddingLeftRight">{{ content["#title"] }}</h1>

  <div class="brands__layout width width_norm width_paddingStandart">
    <div class="brands__content">
      <div class="content">{{ content.main }}</div>
    </div>
  </div>
</div>