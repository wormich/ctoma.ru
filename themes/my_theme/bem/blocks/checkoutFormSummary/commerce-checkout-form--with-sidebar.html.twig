{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
{{ attach_library('my_theme/checkoutSummary') }}

<div class="checkoutFormSummary width width_norm">
  <div class="checkoutFormSummary__main width_paddingStandart">
    {{ form|without('sidebar', 'actions') }}
  </div>
  <div class="checkoutFormSummary__secondary">
    <h2 class="width_paddingStandart">{% trans %} Quote {% endtrans %}</h2>
    {{ form.sidebar }}
  </div>
  <div class="checkoutFormSummary__footer width_paddingStandart">
    {{ form.actions }}
  </div>
</div>
