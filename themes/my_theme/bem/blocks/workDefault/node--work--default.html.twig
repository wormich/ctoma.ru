<div class="workDefault">
    <div class="workDefault__content width width_light">
        {% if content.field_vrac | field_value  %}
            <div class="workDefault__field content_norm">
                <label>Врач:</label>
                {{ content.field_vrac }}
            </div>
        {% endif %}

        {% if content.field_name_pacient | field_value  %}
            <div class="workDefault__field content_norm">
                <label>Имя пациента:</label>
                {{ content.field_name_pacient }}
            </div>
        {% endif %}

        <div class="workDefault__photos">
            <div class="workDefault__do">
                {{ content.field_foto_do }}
            </div>
            <div class="workDefault__posle">{{ content.field_foto_posle }}</div>
        </div>

        {% if content.body | field_value  %}
            <div class="workDefault__field content_norm">
                {{ content.body }}
            </div>
        {% endif %}
    </div>
</div>






